   //选项页描述  成分等
    function exhibition(obj,num) {

        let  my_span = document.getElementsByClassName(" my_span")
        for(let i = 0;i<my_span.length;i++){
            my_span[i].style. borderBottom="0px solid black"
        }
        obj.style. borderBottom="2px solid black"

        let mydiv = document.getElementsByClassName("my_function_one")

        for(let j = 0;j<mydiv.length;j++){
            if(j!=num){
                mydiv[j].style.display="none"
            }else{
                mydiv[j].style.display="block"
            }

        }
    }
    //数量 50
    function my_select() {
        for(let i =1;i<=50;i++){

            $("#my_select").append(`
        <option>${i}</option>>
        `)

        }
    }
    //点击购物车函数
    function deailsGou() {
        //  将数据当前的商品id  传递出去
        //   当前商品的数量
        let  buyNumber = $("#my_select").val()
        //商品的id
         let buyId = <%=details[0].d_id%>

             //当前账户的id

        $.ajax({
            type:"post",
            url:"deailsGou.do",
            data:{
                buyId,
                buyNumber,
            },
            success(data){

            let details = data
             console.log(typeof details)
             if(data==1){

                 login()

             }else if(data=="加入购物车成功"){

                 $(".zhe").css({
                     "display":"block",
                 })
                 $(".gouwuche").css({
                     "display":"block",
                 })
                 $("#tianjiazhifu").text("")
                 $("#tianjiazhifu").text("加入购物车成功")




             }else if(data=="加入购物车失败"){
                 $("#tianjiazhifu").text("")
                 $("#tianjiazhifu").text("加入购物车失败")
             }
            }
        })
    }
    //点击立即支付函数
    function payment() {
         //获取商品单价
        //获取数量
        let  buyNumber = $("#my_select").val()
        //商品的id
        let buyId = <%=details[0].d_id%>
        $.ajax({
            type:"post",
            url:"verification",
            data:{
                buyNumber,
                buyId,
            },
            success(data){
                console.log(data)
                if(data==0){
                    login()
                }else{
                    jump(data)

                }
            }
        })
    }
    //跳转函数
    function jump(str) {
        console.log(112233)
        window.location.href = `lijizhifu?ord=${str}`
    }
    //评论函数
    function comment_cont() {
        let buyId = <%=details[0].d_id%>
        $.ajax({
            type:"post",
            url:"comment_cont",
            data:{
                buyId,
            },
            success(data){
                if(data){
                    data.forEach(function (item) {
                        $(".comment").append(`
                         <div class="comment_li">
                       <p>${item.comment_content}</p>
                    <div>
                        <span><span>来自:</span> ${item.comment_name} </span>
                        <span> <span>产品：</span> ${item.comment_chinese}</span>
                        <span>  ${item.comment_time}</span>
                    </div>
                       </div>
                       `)
                    })
                }else{
                    $(".comment").append(`
                    <p>当前产品暂无评论。</p>

                    `)
                }

            }
        })
    }
function jixu() {
