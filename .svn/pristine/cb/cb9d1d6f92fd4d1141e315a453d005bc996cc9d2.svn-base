$('.addressTable').on('click','.modAddress',function(){
    $('.modifyAddress').modal()
    let thisAddress = $(this).parent().children().eq(0).text()
    let thisAddressArr = thisAddress.split('&nbsp;')
    console.log(thisAddressArr)
    province.val(thisAddressArr[0])
    city.val(thisAddressArr[1])
    town.val(thisAddressArr[2])
