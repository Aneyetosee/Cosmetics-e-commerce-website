/*星品推荐*/
body{
    background: url("../images/b413f1c448f99f5c1b1e8bd360ae6c15.jpg") fixed;
    background-size: 100% 100%;
}
.xptj_hufu{
    width: 70%;
    height: 550px;
    margin-left: 15%;
    border-top: 1px #b3b3b3 solid;
    position: relative;

}
.xptj_text{
    padding: 5px 20px;
    position: absolute;
    left: 44%;
    font-size: 20px;
    background-color: white;
    top: -20px;
}
.xptjhf{
    margin-top: 40px;
    float: left;
}
.xptjhf:hover{
    cursor: pointer;
}
.xptj_name{
    font-size: 16px;
    width: 228px;
    margin: auto;
    text-align: center;
    line-height: 20px;
    border: 1px lightgrey solid;
}
.xptjhf:hover .xptj_name{
    transform: translateY(-5px);
    transition: all 0.5ms linear 0.5ms ;
}
.xptjhf:hover .xptj_img{
    transform: translateY(-5px);
    transition: all 0.5ms linear 0.5ms ;
}
.xptj_img{
    width: 228px;
    margin: auto;
    border: 1px lightgrey solid;
    overflow: hidden;
}
