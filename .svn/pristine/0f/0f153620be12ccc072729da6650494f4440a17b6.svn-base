            <li><a href="#">星品推荐</a></li>
        </ul>
    </div>
</nav>
<div id="loginDiv">
    <!--手机号邮箱登录-->
    <form class="myAccount_login">
        <div class="myinput">
            <p onclick="message()">短信验证码登录</p>
            <input type="text" name="userName" id="userName" placeholder="手机号/邮箱">
            <input type="password" name="pwd" id="pwd" placeholder="密码"><br>
            <span>忘记密码？</span>
            <span onclick="register()">立即注册</span>  <!--注册-->
            <div id="login">登录</div>
        </div>
    </form>
    <!--验证码登录-->
    <form class="mySms_login">
        <div class="myinput">
            <p onclick="account()">账号密码登录</p>
            <input type="text" id="phone" name="phone" placeholder="手机号">
            <input type="text" id="code" name="verification" placeholder="验证码"><br>
            <span onclick="sendClick()" id="sendMsg">获取验证码</span>
            <div id="loginPhone">登录</div>
        </div>
    </form>
    <!--注册-->
    <form class="myregister">
        <div class="myinput">
            <table id="mytable">
                <tr><td colspan="2"><input type="text" id="nickname" name="nickname" placeholder="昵称"><br></td></tr>
                <tr><td colspan="2" id="phoneTestTd"><input id="userPhone" type="text" name="userName" placeholder="手机号" onblur="registerPhoneTest()">
                        <p id="phoneTestBox"></p>
                        <p id="phoneTishi"></p>
                    </td></tr>
                <tr><td colspan="2"><input id="verification" type="text" name="verification" placeholder="验证码" onblur="regPhone()"><span onclick="regsendClick()" id="getMsg">获取验证码</span></td></tr>
                <tr><td colspan="2"><input type="password" id="pwd1" name="pwd" placeholder="密码"></td></tr>
                <tr><td colspan="2" id="pwdTestTd"><input type="password" id="pwd2" name="pwd" placeholder="确认密码" onblur="ifPwd()">
                        <p id="pwdTestBox"></p>
                    </td></tr>
                <tr>
                    <td colspan="2" id="emailTestTd"><input id="email" type="text" name="email" placeholder="邮箱" onblur="testEmail()">
                        <p id="emailTestBox"></p>
                        <p id="emailTishi"></p>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label>出生日期</label>
                        <select id="sel_year" rel="2000"></select><label for="sel_year">年</label>
                        <select id="sel_month" rel="2"></select><label for="sel_month">月</label>
                        <select id="sel_day" rel="14"></select><label for="sel_day">日</label>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label>性别：</label>
                        <input type="radio" name="sex" value="1" id="nan" checked><label for="nan">男</label>&nbsp;
                        <input type="radio" name="sex" value="2" id="nv"><label for="nv">女</label>
                    </td>
                </tr>
                <tr>
                    <td><span id="reg" onclick="registerDo()">注册</span></td>
                    <td><span id="return">返回</span></td>
                </tr>
            </table>
            <p id="regThishi" style="color: red"></p>
        </div>
    </form>
</div>
<script>
    /*手机号邮箱登录*/
    $("#login").click(function () {
        var userName = $("#userName").val()
        var pwd = $("#pwd").val()
        $.ajax({
            type: "post",
            url: "login.do",
            data: {userName,pwd},
            success(data){
                if (data){
                        $(".login").prepend("<span id='myName'><em><a href='loginDoIt' style='text-decoration: none; color: #918e91; font-size: 20px;'></a></em>欢迎您！</span><span class='logout'>&nbsp;注销</span>")
                        $("#myName>em>a").text(data.u_nickname)
                        $("#mylogin").css({
                            display:"none"
                        })
                        $("#loginDiv").css({
                            display:"none"
                        })
                }
                else{
                    $("#login").after("<p style='color: red;'>密码账号输入错误，请重新输入！</p>")
                    console.log("登录失败")
                }
            }
        })
        $("#userName").val("")
        $("#pwd").val("")
    })
    /*滚动条事件*/
    window.onscroll=function () {
        var myScroll=document.documentElement.scrollTop||document.body.scrollTop;
        if (myScroll>184){
            $("nav").addClass("navbar-fixed-top")
            $(".navbar-fixed-top").autoHidingNavbar();//向下滚动时隐藏导航条
        }else {
            $("nav").removeClass("navbar-fixed-top")
        }
    }
    /*显示登录框*/
    function login() {
        $("#loginDiv").css({
            display:"block"
        })
    }
    /*出生日期下拉框*/
    $(function () {
        $.ms_DatePicker({
            YearSelector: ".sel_year",
            MonthSelector: ".sel_month",
            DaySelector: ".sel_day"
        });
        $.ms_DatePicker();
    });
    /*短信登录*/
    function message() {
        $(".myAccount_login").css({
            display:"none"
        })
        $(".myregister").css({
            display:"none"
        })
        $(".mySms_login").css({
            display:"block"
        })
    }
    /*账号登录*/
    function account() {
        $(".mySms_login").css({
            display:"none"
        })
        $(".myAccount_login").css({
            display:"block"
        })
        $(".myregister").css({
            display:"none"
        })
    }
    /**********************注册*********************/
    /*正则判断/重复  邮箱账号*/
    var reg
    function testEmail() {
        $("#emailTestBox").html("")
        let email=$("#email").val();
        let regEmail=/^[\w]{4,16}[@][\w]{1,5}[.][a-zA-Z]{2,3}$/
        $.ajax({
            type:"post",
            url:"regTestEmail.do",
            data:{email},
            success(data){
                if(data==1&&regEmail.test(email)){
                    $("#emailTestBox").append("<i class='iconfont icon-zhengque'></i>")
                    $("#emailTishi").text("")
                    reg = 1
                }
                else if(data==1&&!regEmail.test(email)){
                    $("#emailTestBox").append("<i class='iconfont icon-cuowuguanbi-'></i>")
                    $("#emailTishi").text("邮箱格式错误")
                    reg = 0
                }
                else  if(data==0){
                    $("#emailTestBox").append("<i class='iconfont icon-cuowuguanbi-'></i>")
                    $("#emailTishi").text("该邮箱已存在")
                    reg = 0
                }
            }
        })
    }
    /*正则判断/重复  手机号*/
    function registerPhoneTest() {
        $("#phoneTestBox").html("")
        let phone=$("#userPhone").val()
        let regPhone=/^[0-9]{11,11}/
        $.ajax({
            type:"post",
            url:"regTestPhone.do",
            data:{phone},
            success(data){
                if(data==1&&regPhone.test(phone)){
                    $("#phoneTestBox").append("<i class='iconfont icon-zhengque'></i>")
                    $("#phoneTishi").text("")
                    reg = 1
                }
                else if(data==1&&!regPhone.test(phone)){
                    $("#phoneTestBox").append("<i class='iconfont icon-cuowuguanbi-'></i>")
                    $("#phoneTishi").text("邮箱格式错误")
                    reg = 0
                }
                else  if(data==0){
                    $("#phoneTestBox").append("<i class='iconfont icon-cuowuguanbi-'></i>")
                    $("#phoneTishi").text("该邮箱已存在")
                    reg = 0
                }
            }
        })

    }
    /*注册*/
    function register() {
        $(".mySms_login").css({
            display:"none"
        })
        $(".myAccount_login").css({
            display:"none"
        })
        $(".myregister").css({
            display:"block"
        })
    }
    /*发送验证码注册*/
    function regsendClick() {
        let userPhone = $("#userPhone").val()
        console.log(userPhone)
        $.ajax({
            type:"post",
            url:"/regsms.do",
            data:{userPhone},
            success(data){
                $("#getMsg").text(data)
            }
        })
    }

    /*验证验证码注册*/
    function regPhone() {
        let code = $("#verification").val()
        let phone = $("#userPhone").val()
        $.ajax({
            type:"post",
            url:"regVerifyCode.do",
            data:{code,phone},
            success(data){
                if (data){
                    reg=1
                }
                else{
                    reg=0
                }
            }
        })
        $("#code").val("")
        $("#phone").val("")
    }

    // 这个函数在控制什么时候该提交  什么时候不该提交
    function registerIf() {
        return reg&&ifPwd()?true:false
    }
    function ifPwd() {
        $("#pwdTestBox").html("")
        let pwd1 = $("#pwd1").val()
        let pwd2 = $("#pwd2").val()
        if (pwd1==pwd2&&pwd1!=null) {
            $("#pwdTestBox").append("<i class='iconfont icon-zhengque'></i>")
            return true
        }
        else {
            $("#pwdTestBox").append("<i class='iconfont icon-cuowuguanbi-'></i>")
            return false
        }
    }


    function registerDo() {
        $("#regThishi").text("")
        let nickname=$("#nickname").val()
        let userPhone=$("#userPhone").val()
        let pwd1=$("#pwd1").val()
        let email=$("#email").val()
        let birth=$("#sel_year").val()+"-"+$("#sel_month").val()+"-"+$("#sel_day").val()
        let sex=$("input[type='radio']:checked").val()
        if (sex==1){
            sex="男"
        } else {
            sex="女"
        }
        if (registerIf()) {
            $.ajax({
                type: "post",
                url: "reg.do",
                data: {nickname,userPhone,pwd1,email,birth,sex},
                success(data) {
                    if (data){
                        $(".login").prepend("<span id='myName'><em><a href='loginDoIt' style='text-decoration: none; color: #918e91; font-size: 20px;'></a></em>欢迎您！</span><span class='logout'>&nbsp;注销</span>")
                        $("#myName>em>a").text(data.u_nickname)
                        $("#mylogin").css({
                            display:"none"
                        })
                        $("#loginDiv").css({
                            display:"none"
                        })
                    }
                    else {
                        console.log("注册失败")
                    }
                }
            })
        }
        else {
            $("#regThishi").text("信息有误，请重新输入")
        }
    }




    /*发送验证码登录*/
    function sendClick() {
        let userPhone = $("#phone").val()
        console.log(userPhone)
        $.ajax({
            type:"post",
            url:"/sms.do",
            data:{userPhone},
            success(data){
                $("#sendMsg").text(data)
            }
        })
    }
    /*验证验证码登录*/
    $("#loginPhone").click(function () {
        let code = $("#code").val()
        let phone = $("#phone").val()
        $.ajax({
            type:"post",
            url:"verifyCode.do",
            data:{code,phone},
            success(data){
                if (data){
                    $(".login").prepend("<span id='myName'><em><a href='loginDoIt' style='text-decoration: none; color: #918e91; font-size: 20px;'></a></em>欢迎您！</span><span class='logout'>&nbsp;注销</span>")
                    $("#myName>em>a").text(data.u_nickname)
                    $("#mylogin").css({
                        display:"none"
                    })
                    $("#loginDiv").css({
                        display:"none"
                    })
                }
                else{
                    $("#login").after("<p style='color: red;'>验证码输入错误，请重新输入！</p>")
                    console.log("登录失败")
                }
            }
        })
        $("#code").val("")
        $("#phone").val("")
    })





    /*点击注销*/
    $(".login").on("click",".logout",function () {
        $.ajax({
            type: "post",
            url: "logout.do",
            data: {},
            success(data) {
                $("#mylogin").css({
                    display:"inline-block"
                })
                $("#myName").remove()
                $(".logout").remove()
            }
        })
    })
</script>
</body>
</html>