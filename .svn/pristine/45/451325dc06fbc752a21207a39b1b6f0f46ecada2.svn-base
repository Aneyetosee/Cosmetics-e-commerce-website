section{
    background-color: #f5f5f5;
}
h2{
    margin:10px 0 20px;
}
.modifyContent{
    width:100%;
    background-color: #fff;
    padding:20px 0 0;
}

.sexChoose{
    padding-left:5%;
}
/* 下拉框 */
.select_box{ 
    font-size: 12px;
    color: #999999;
    width: 128px;
    line-height: 20px;
    cursor: pointer;
    position: relative;
}
.select_showbox{
    border: 1px solid #b0a296;
    height: 20px;
    padding-left: 5px;
    background: url(../images/icon.png) no-repeat 106px 0;
}
.select_option{
    background-color: #fff;
    width:100%;
    border: 1px solid #b0a296;
    border-top: none;
    display: none;
    position: absolute;
    top:20px;
    left:0;
    z-index: 3;
}
.select_option li{
    padding-left: 5px;
}
.select_option li.hover{
    background: #7b6959;
    color: #fff;
}

.otherInput,
.birDay,
.modalModify,
.saveData{
    padding-top:40px;
    padding-left:5%;
}
.otherInput>div,
.saveData>div{
    width:50%;
}
.otherInput>div:nth-child(3),
.otherInput>div:nth-child(4){
    padding-top:20px;
}
.otherInput>div>p{
    padding-bottom: 10px;
}
.otherInput>div>div{
    width:50%;
    border: 1px solid #b0a296;
}
.otherInput>div>div>input,
.modifyPasswordContent>div>input,
.getVerificationInput,
#messageText{
    width:100%;
    outline: none;
    border:none;
    padding:0 5px;
}
.birDay>div>input{
    border:1px solid #b0a296;
    outline: none;
}
.modalModify>div>span{
    cursor: pointer;
}
.modalModify>div>span:last-child{
    margin-left:5%;
}
.saveData{
    padding-bottom: 40px;
}
.savebtn{
    width:30%;
    height:30px;
    background-color: #b0a296;
    color: #fff;
    text-align: center;
    line-height: 30px;
    cursor: pointer;
}

.modifyPasswordContent{
    padding-left:10%;
}
.modifyPasswordContent>p{
    padding:10px 0;
}
.modifyPasswordContent>div{
    width:50%;
    height:25px;
    border:1px solid #b0a296;
}

.phoneLabel{
    display: block;
}
.phoneVerification{
    width:30%;
    height:25px;
    border:1px solid #b0a296;
}
.phoneVerificationContent{
    width:18%;
    height:25px;
    line-height: 25px;
    text-align: center;
    background-color: #b0a296;
    color: #fff;
    cursor: pointer;
    border-radius: 0 5px 5px 0;
}
.phoneVerificationContent:hover{
    background-color: #ac9684;
}